{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/foomo/squadron/internal/config/config",
  "$ref": "#/$defs/Config",
  "$defs": {
    "Build": {
      "properties": {
        "context": {
          "type": "string"
        },
        "add_host": {
          "items": {
