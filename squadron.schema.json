      "additionalProperties": false,
      "type": "object"
    },
    "Config": {
      "properties": {
        "version": {
          "type": "string"
        },
        "vars": {
          "type": "object"
        },
        "global": {
          "type": "object"
        },
        "builds": {
          "additionalProperties": {
            "$ref": "#/$defs/Build"
          },
          "type": "object"
        },
        "squadron": {
          "additionalProperties": {
            "additionalProperties": {
              "$ref": "#/$defs/Unit"
            },
            "type": "object"
          },
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "version"
      ]
    },
    "Dependency": {
      "properties": {
        "Name": {
          "type": "string"
        },
        "Repository": {
          "type": "string"
        },
        "Version": {
          "type": "string"
        },
        "Alias": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Name",
        "Repository",
        "Version",
        "Alias"
      ]
    },
    "Tags": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "Unit": {
      "properties": {
        "chart": {
          "$ref": "#/$defs/Dependency"
        },
        "kustomize": {
          "type": "string"
        },
        "tags": {
          "$ref": "#/$defs/Tags"
        },
        "builds": {
          "additionalProperties": {
            "$ref": "#/$defs/Build"
          },
          "type": "object"
        },
        "values": {
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
