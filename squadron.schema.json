        },
        "allow": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "attest": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "build_arg": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "build_context": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "builder": {
          "type": "string"
        },
        "cache_from": {
          "type": "string"
        },
        "cache_to": {
          "type": "string"
        },
        "cgroup_parent": {
          "type": "string"
        },
        "file": {
          "type": "string"
        },
        "iidfile": {
          "type": "string"
        },
        "label": {
          "items": {
            "type": "string"
          },
          "type": "array"
